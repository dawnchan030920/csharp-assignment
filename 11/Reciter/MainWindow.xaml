<Window x:Class="Reciter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Reciter.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Chinese}" HorizontalAlignment="Center" Margin="12" FontSize="24"/>
            <TextBox Text="{Binding InputEnglish,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="12" MinWidth="300">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SubmitCommand}" Key="Return"/>
                </TextBox.InputBindings>
            </TextBox>
            <Button Content="Submit" Command="{Binding SubmitCommand}" HorizontalAlignment="Center" Margin="12"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="12">
                <TextBlock Text="{Binding Result}"/>
                <Button Content="Next" Command="{Binding NextCommand}" Margin="12,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
